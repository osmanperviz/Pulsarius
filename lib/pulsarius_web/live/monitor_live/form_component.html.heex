<div>
  <h2><%= @title %></h2>

  <.form
    let={f}
    for={@changeset}
    id="monitor-form"
    phx-target={@myself}
    phx-change="validate"
    phx-submit="save">
  
    <div>
      <%= text_input f, :name, placeholder: "Pronounceable monitor name", class: "form-control" %>
      <%= submit "Save", phx_disable_with: "Saving..." %>
    </div>
  </.form>
</div>
